<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="800.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootLayoutController">
	<top>
      <Pane maxHeight="40.0" minHeight="40.0" prefHeight="40.0" styleClass="pane-content-bar">
         <children>
      		<MenuBar maxHeight="40.0" prefHeight="40.0" prefWidth="800.0">
      			<menus>
      				<Menu mnemonicParsing="false" text="File">
      					<items>
      						<MenuItem mnemonicParsing="false" onAction="#handleNew" text="New" />
      						<MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open" />
      						<MenuItem mnemonicParsing="false" onAction="#handleSave" text="Save" />
      						<MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save As..." />
      						<MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
      					</items>
      				</Menu>
      				<Menu mnemonicParsing="false" text="Statistics">
      					<items>
      						<MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="Show Statistics" />
      					</items>
      				</Menu>
      				<Menu mnemonicParsing="false" text="Graphics">
      					<items>
      						<MenuItem mnemonicParsing="false" onAction="#handleGraphical" text="Round Images" />
      					</items>
      				</Menu>
                  <Menu mnemonicParsing="false" text="Styles">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleStyles1" onMenuValidation="#handleStyles1" text="DarkThem1" />
                      <MenuItem mnemonicParsing="false" onAction="#handleStyles2" onMenuValidation="#handleStyles2" text="DarkThem2" />
                    </items>
                  </Menu>
      				<Menu mnemonicParsing="false" text="Help">
      					<items>
      						<MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
      					</items>
      				</Menu>
      			</menus>
      		</MenuBar>
            <TextField id="txFldSearch" fx:id="campo_busqueda" layoutX="597.0" layoutY="4.0" onAction="#handleBusqueda" prefHeight="25.0" prefWidth="199.0" promptText="search contact..." styleClass="text-field2" />
         </children>
      </Pane>
	</top>
